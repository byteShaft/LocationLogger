<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="42dp"
    android:paddingRight="42dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/ll_welcome_login"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="CONSENT FORM"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_welcome_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_email"
            android:drawablePadding="10dp"
            android:hint="E-Mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="48"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#80ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_login_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_edit_text"
            android:drawableLeft="@mipmap/ic_edit_text_full_name"
            android:drawablePadding="10dp"
            android:hint="Full Name"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:maxLength="32"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#80ffffff"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_login_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button"
            android:padding="10dp"
            android:text="Start"
            android:textColor="@drawable/button_text_color"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/cb_terms_of_service_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:buttonTint="@android:color/darker_gray"
            android:text="I agree to the terms and services"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>